{
    "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
    "elmType": "div",
    "children": [{
        "elmType": "span",
        "customCardProps": {
            "openOnEvent": "hover",
            "directionalHint": "topCenter",
            "formatter": {
                "elmType": "div",
                "style": {
                    "padding": "8px",
                    "max-width": "300px"
                },
                "txtContent": {
                    "operator": "?",
                    "operands": [
                        "@currentField",
                        "='Conclu√≠da em ' + toLocaleString(@currentField)",
                        "Tarefa incompleta"
                    ]
                }
            }
        },
        "style": {
            "border-radius": "50%",
            "font-size": "18px"
        },
        "attributes": {
            "class": "=if(@currentField, 'ms-bgColor-green ms-bgColor-greenDark--hover ms-fontColor-white', 'ms-fontColor-neutralDark ms-fontColor-neutralSecondary--hover')",
            "iconName": "=if(@currentField, 'StatusCircleCheckmark', 'CircleRing')"
        }
    }]
}